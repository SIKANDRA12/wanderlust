<% layout("/layouts/boilerplate") %>

<script>
  const mapToken = "<%= process.env.MAP_TOKEN %>";
  let coordinates = <%-JSON.stringify(listing.geometry.coordinates)%>;
  let listing = <%-JSON.stringify(listing)%>;
</script>

<div class="row mt-3">
  <div class="col-8 offset-3">
    <h3><b><%= listing.title %></b></h3>
  </div>

  <div class="card col-6 offset-3 show-card listing-card">
    <img
      src="<%= listing.image.url %>"
      class="card-img-top show-image"
      alt="Listing_image"
    />

    <div class="card-body side-by">
      <div>
        <p class="card-text">Owned by <i><%=listing.owner.username %></i></p>
        <p class="card-text"><%= listing.description %></p>
        <p class="card-text">
          &#8377;<%= Number(listing.price).toLocaleString("en-IN") %><i>
            + 18% GST</i
          >
        </p>
        <p class="card-text"><%= listing.country %></p>
        <p class="card-text"><%= listing.location %></p>
      </div>

      <div>
        <%- include("../includes/chekout.ejs", { listing, nights, subtotal,
        serviceFee, total }) %>
      </div>
    </div>
  </div>

  <!-- Reservation Section -->
  <div class="card col-6 offset-3 mt-3 mb-3 p-3">
    <h1><%= listing.title %></h1>
    <p>Price per night: $<%= listing.price %></p>

    <% if(currUser) { %>
    <form action="/reserve/<%= listing._id %>" method="POST">
      <label>Number of Nights:</label>
      <input
        type="number"
        name="nights"
        value="1"
        min="1"
        required
        class="form-control w-25 mb-2"
      />
      <button type="submit" class="btn btn-dark">Reserve Now</button>
    </form>
    <% } else { %>
    <h5><a href="/login">Login to Reserve</a></h5>
    <% } %>

    <a href="/listings" class="btn btn-outline-dark mt-2">Back to Listings</a>
  </div>
  <!-- End Reservation Section -->

  <% if (currUser && currUser._id && listing.owner && listing.owner._id &&
  currUser._id.equals(listing.owner._id)) { %>
  <div class="btns">
    <a
      href="/listings/<%= listing._id %>/edit"
      class="btn btn-dark edit-btn col-1 offset-3"
      >Edit</a
    >
    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
      <button class="btn btn-dark delete-btn offset-5">Delete</button>
    </form>
  </div>
  <% } %>

  <div class="col-8 offset-3 mb-3">
    <% if(currUser){ %>
    <hr />
    <h4>Leave a Review</h4>
    <form
      method="POST"
      action="/listings/<%= listing._id %>/reviews"
      novalidate
      class="needs-validation g-3"
    >
      <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>
        <fieldset class="starability-slot">...</fieldset>
      </div>

      <div class="mb-3 mt-3">
        <label for="comment" class="form-label">Comments</label>
        <textarea
          name="review[comment]"
          id="comment"
          cols="30"
          rows="5"
          class="form-control"
          placeholder="Write your comment"
          required
        ></textarea>
      </div>

      <button class="btn btn-outline-dark">Submit</button>
    </form>
    <hr />
    <% } %> <% if(listing.reviews.length>0) { %>
    <div class="row">
      <h4><b>All Reviews </b></h4>
      <% for(review of reviews){ %>
      <div class="card col-5 ms-3 mb-3">
        <div class="card-body">
          <h5 class="card-title">@<%=review.author.username %></h5>
          <p
            class="starability-result card-text"
            data-rating="<%= review.rating %>"
          ></p>
          <p class="card-text"><%= review.comment %></p>
          <form
            class="mb-3"
            method="POST"
            action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
          >
            <button class="btn btn-sm btn-dark">Delete</button>
          </form>
        </div>
      </div>
      <% } %>
    </div>
    <% } %>
  </div>

  <div class="col-8 offset-3 mb-3">
    Where you'll be
    <div id="map"></div>
  </div>
</div>

<script src="/js/map.js"></script>


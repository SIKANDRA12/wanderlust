<% layout("/layouts/boilerplate") %>
<body>
  <h1>Search Results</h1>
  
  <div class="container mt-4">
    <div class="row">
      <% results.forEach(function(result) { %>
        <div class="col-md-4 mb-4">
          <div class="card h-100">
            <% if(result.image && result.image.url) { %>
              <img src="<%= result.image.url %>" class="card-img-top" alt="<%= result.title %>">
            <% } else { %>
              <img src="/path/to/placeholder.jpg" class="card-img-top" alt="No image available">
            <% } %>
            <div class="card-body">
              <h5 class="card-title"><%= result.title %></h5>
              <p class="card-text">
                <strong>Location:</strong> <%= result.location %><br>
                <strong>Country:</strong> <%= result.country %><br>
                <strong>Owner:</strong> <%= result.owner ? result.owner.username : 'Unknown' %>
              </p>
            </div>
            <div class="card-footer text-center">
              <a href="/listings/<%= result._id %>" class="btn btn-primary">View Details</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>




<div>
  <style>
    .checkout-container {
      border: 1px solid #ccc;
      padding: 20px;
      border-radius: 12px;
      width: 320px;
      font-family: Arial, sans-serif;
      margin-top: 20px;
    }

    .checkout-container h2 {
      margin-bottom: 5px;
      font-size: 24px;
    }

    .checkout-container h2 span {
      font-weight: normal;
      font-size: 16px;
    }

    .checkout-container p {
      color: gray;
      margin-bottom: 20px;
    }

    .form-group {
      margin-bottom: 12px;
    }

    input {
      width: 100%;
      padding: 8px;
      border: 1px solid #ddd;
      border-radius: 6px;
    }

    .reserve-btn {
      width: 100%;
      padding: 10px;
      background-color: #ff385c;
      color: white;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      margin-top: 10px;
    }

    .note {
      text-align: center;
      color: gray;
      font-size: 12px;
      margin-top: 8px;
    }

    .price-breakdown {
      margin-top: 15px;
      font-size: 14px;
    }

    .price-breakdown p {
      display: flex;
      justify-content: space-between;
      margin-bottom: 8px;
    }

    .price-breakdown hr {
      margin: 10px 0;
    }
  </style>

  <div class="checkout-container">
    <h2>
      &#8377;<%= Number(listing.price).toLocaleString("en-IN") %>
      <span>night</span>
    </h2>
    <p>₹<%= Number(listing.price).toLocaleString("en-IN") %> per night</p>

    <form action="/reserve" method="POST">
      <div class="form-group">
        <label>Check-in</label>
        <input type="date" name="checkin" required />
      </div>
      <div class="form-group">
        <label>Checkout</label>
        <input type="date" name="checkout" required />
      </div>
      <div class="form-group">
        <label>Guests</label>
        <input type="number" name="guests" value="1" min="1" required />
      </div>

      <button type="submit" class="reserve-btn">Reserve</button>
      <p class="note">You won't be charged yet</p>

      <div class="price-breakdown">
        <p>
          ₹<%= Number(listing.price).toLocaleString("en-IN") %> x <%= nights %>
          nights <span>₹<%= Number(subtotal).toLocaleString("en-IN") %></span>
        </p>
        <p>
          Service fee
          <span>₹<%= Number(serviceFee).toLocaleString("en-IN") %></span>
        </p>
        <hr />
        <p>
          Total before taxes
          <span>₹<%= Number(total).toLocaleString("en-IN") %></span>
        </p>
      </div>
    </form>
  </div>
</div>
